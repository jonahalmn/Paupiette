<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :nickname %>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :Gender %>
    <%= f.collection_radio_buttons :Gender, [[true, 'Homme'] ,[false, 'Femme']], :first, :last %>
  </div>

  <div class="field">
    <%= f.label :BirthDate %>
    <%= f.date_select :BirthDate %>
  </div>

  <div class="field">
    <%= f.label :City %>
    <%= f.text_field :City %>
  </div>

  <div class="field">
    <%= f.label :Mail %>
    <%= f.text_field :Mail %>
  </div>

  <div class="field">
    <%= f.label :Phone %>
    <%= f.text_field :Phone %>
  </div>

  <div class="field">
    <%= f.label :Interest %>
    <%= f.text_field :Interest %>
  </div>

  <div class="field">
    <%= f.label :Description %>
    <%= f.text_area :Description %>
  </div>

  <div class="field">
    <%= f.label :Password %>
    <%= f.password_field :Password %>
  </div>

  <div class="field">
    <%= f.label :Type %>
    <%= f.collection_radio_buttons :Type, [[true, 'Etudiant'] ,[false, 'Marmiton']], :first, :last %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
